<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <cube.d.n.rn.ButtonView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            custom:mytext="none"
            android:id="@+id/filter_clear"/>

        <cube.d.n.rn.ButtonView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            custom:mytext="1"
            android:id="@+id/filter_1"/>

        <cube.d.n.rn.ButtonView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            custom:mytext="2"
            android:id="@+id/filter_2"/>

        <cube.d.n.rn.ButtonView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            custom:mytext="3"
            android:id="@+id/filter_3"/>

        <cube.d.n.rn.ButtonView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
             custom:mytext="4"
            android:id="@+id/filter_4"/>

        <cube.d.n.rn.ButtonView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            custom:mytext="color"
            android:id="@+id/filter_color"/>

    </LinearLayout>

    <cube.d.n.rn.Tess
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/tess"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="Challenge 25" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="2 users have tried this challenge" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="1 user has completed it" />
        </LinearLayout>
        <cube.d.n.rn.ButtonView
        android:layout_width="50dp"
        android:layout_height="fill_parent" />
        <cube.d.n.rn.ButtonView
            android:layout_width="50dp"
            android:layout_height="fill_parent" />
        <cube.d.n.rn.ButtonView
            android:layout_width="50dp"
            android:layout_height="fill_parent" />
    </LinearLayout>

</LinearLayout>
